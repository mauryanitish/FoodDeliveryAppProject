<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/food_svgrepo_com"
        android:id="@+id/imgStartActivity"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enjoy Resturant Quality Meal\nAt Home"
        android:textAlignment="center"
        android:textColor="@color/textGreen"
        android:fontFamily="@font/pacifico_regular"
        android:textStyle="bold"
        android:textSize="22sp"
        android:id="@+id/tvStartActivity"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgStartActivity"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="150dp"
        android:layout_height="57dp"
        android:text="Next"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/greenbuttongradient"
        android:textColor="@color/white"
        android:id="@+id/btnStartActivityNext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvStartActivityBottom"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Design by\nNitish Kumar"
            android:textAlignment="center"
            android:textSize="16sp"
            android:fontFamily="@font/exo_medium"
            android:textColor="@color/textGreen"
            android:layout_marginBottom="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/tvStartActivityBottom"
            />
</androidx.constraintlayout.widget.ConstraintLayout>