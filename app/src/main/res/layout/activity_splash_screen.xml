<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/logo"
        android:id="@+id/imgSplashLogo"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Logo" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Waves of food"
        android:textSize="40sp"
        android:fontFamily="@font/pacifico_regular"
        android:textAlignment="center"
        android:id="@+id/tvSplashName"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgSplashLogo"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Deliver favorite food"
        android:fontFamily="@font/exo_medium"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:id="@+id/tvSplashSubName"
        app:layout_constraintStart_toStartOf="@id/tvSplashName"
        app:layout_constraintEnd_toEndOf="@id/tvSplashName"
        app:layout_constraintTop_toBottomOf="@id/tvSplashName"/>
    <TextView
        android:layout_width="0dp"
        android:fontFamily="@font/exo_medium"
        android:layout_height="wrap_content"
        android:text="Design by\nNitish Kumar"
        android:textSize="16sp"
        android:textColor="@color/textGreen"
        android:textAlignment="center"
        android:id="@+id/tvSplashOwner"
        android:layout_marginBottom="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>